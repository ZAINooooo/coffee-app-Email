<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zainkalim.coffeeapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:textColor="@android:color/white"
        android:padding="18dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:shadowColor="#ffffff"
        android:text="Welcome To Our Coffee App"
        android:textSize="23sp"

        android:background="#000000"/>




    <TextView
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Coffee: Rs.80 cup"
        android:textSize="20sp"
        android:background="#3F51B5"/>
    <LinearLayout
        android:background="#5C6BC0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <Button

            android:onClick="incrementcoffee1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="25sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coffeequantity_1"
            android:text="0"
            android:padding="16dp"
            android:textSize="25sp"/>
        <Button
            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="decrementcoffee1"
            android:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost="
            android:textSize="20sp"
            android:padding="18dp"/>
        <TextView
            android:textSize="17sp"
            android:padding="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/coffeeprice_1"
            android:text="$0"/>
      </LinearLayout>




    <TextView
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Tea: Rs.60 Cup"
        android:textSize="20sp"
        android:background="#3F51B5"/>

    <LinearLayout
        android:background="#5C6BC0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <Button

            android:onClick="incrementtea1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teaquantity_1"
            android:text="0"
            android:padding="16dp"
            android:textSize="25sp"/>
        <Button
            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="decreamenttea1"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost ="
            android:textSize="20sp"
            android:padding="18dp"/>
        <TextView
            android:textSize="20sp"
            android:padding="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teaprice_1"
            android:text="$0"/>

    </LinearLayout>

    <TextView
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.Green Tea: $2 Cup"
        android:textSize="20sp"
        android:background="#3F51B5"/>
    <LinearLayout
        android:background="#5C6BC0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <Button

            android:onClick="incrementgreen1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greenteaquantity_1"
            android:text="0"
            android:padding="16dp"
            android:textSize="25sp"/>
        <Button
            android:textSize="18sp"

            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:onClick="decrementgreen1"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost ="
            android:textSize="20sp"
            android:padding="18dp"/>
        <TextView
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greenteaprice_1"
            android:text="$0"/>

    </LinearLayout>

    <Button
        android:onClick="finalmessage"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"




        android:text="Coffee Order"
        android:textSize="15sp"

       />

    <Button
        android:onClick="finalmessage2"
        android:layout_width="270px"
        android:layout_height="110px"
        android:text="Tea Order"
        android:textSize="15sp"
        android:layout_marginTop="-59dp"
        android:layout_marginLeft="250dp"/>

    <Button
        android:onClick="finalmessage3"
        android:layout_width="230px"
        android:layout_height="115px"

        android:text="GreenTea "
        android:textSize="15sp"


        android:layout_marginTop="-59dp"
        android:layout_marginLeft="130dp"/>




</LinearLayout>

